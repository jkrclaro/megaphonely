{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "775451337188.dkr.ecr.eu-west-1.amazonaws.com/megaphone:app",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "facebook",
      "image": "775451337188.dkr.ecr.eu-west-1.amazonaws.com/megaphone:publisher",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3001,
          "containerPort": 3000
        }
      ],
      "command": ["npm", "run", "facebook"]
    },
    {
      "name": "twitter",
      "image": "775451337188.dkr.ecr.eu-west-1.amazonaws.com/megaphone:publisher",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3002,
          "containerPort": 3000
        }
      ],
      "command": ["npm", "run", "twitter"]
    },
    {
      "name": "linkedin",
      "image": "775451337188.dkr.ecr.eu-west-1.amazonaws.com/megaphone:publisher",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3003,
          "containerPort": 3000
        }
      ],
      "command": ["npm", "run", "linkedin"]
    }
  ]
}
