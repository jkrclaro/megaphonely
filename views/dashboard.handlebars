<div class='col-lg-12'>
  <div class='row'>

    <div class='col-lg-3' style='background-color: #F6F9FC; border-radius: 5%; padding-top: 5px; padding-bottom: 20px'>
      <h3 class='text-center'>Your feeder</h3>
      <form method='post' action='/content' enctype='multipart/form-data'>
        <div class='form-group'>
          <textarea class='form-control' name='message' cols='45' rows='5' placeholder='What do you want to share?'></textarea>
        </div>

        <div class='input-group'>
          <label class='input-group-btn'>
            <span class='btn btn-primary'>
              Choose file&hellip; <input type='file' style='display: none;' name='photo'>
            </span>
          </label>
          <input type='text' class='form-control' readonly>
        </div>

        {{#unless socials}}
          <div class='col-lg-12' style='padding-top: 10px; padding-bottom: 10px'>
            <p>You currently have no connected social accounts</p>
          </div>
        {{/unless}}
        {{#each socials}}
          <label class='checkbox'>
            <div class='col-lg-12 social-hover' style='padding-left: 50px; padding-bottom: 10px'>
                <input type='checkbox' name='socialIds' value={{this.socialId}}>
                <span class='fa fa-{{this.provider}}'>
                  {{#if this.username}}
                    {{this.username}}
                  {{else}}
                    {{this.displayName}}
                  {{/if}}
                </span>
            </div>
          </label>
        {{/each}}

        <div class='row'>
          <div class='col-xs-8'>

            <div class='input-group date form_datetime' data-link-field='publishAtDate'>
                <input id='dateTimePickerInput' class='form-control' type='text' name='publishAt' readonly>
                <span class='input-group-addon'>
                  <span class='glyphicon glyphicon-calendar'></span>
                </span>
                <input id='publishAtDate' type='hidden' value=''>
            </div>
          </div>
          <div class='col-xs-4'>
            <button type='submit' class='btn btn-block btn-primary'>Submit</button>
          </div>
        </div>

      </form>
    </div>
    <div class='col-lg-6' style='padding-top: 20px'>
      {{#unless contents}}
        <p class='text-center'>You currently have no scheduled contents</p>
      {{/unless}}
      {{#each contents}}
        {{#unless @index}}
          <div class='col-lg-12'>
            <hr>
          </div>
        {{/unless}}
        <div class='col-lg-12'>
          <div class='row'>
            <div class='col-lg-12'>
              <div class='date-to-moment-shortformat pull-left'>{{this.publishAt}}</div>
              <div class='pull-right'>
                <div class='row'>
                    {{#each Socials}}
                      <div class='pull-right' style='padding-right: 10px;'>
                        {{#if this.username}}
                          <span title={{this.username}} class='fa fa-{{this.provider}}'></span>
                        {{else}}
                          <span title={{this.displayName}} class='fa fa-{{this.provider}}'></span>
                        {{/if}}
                      </div>
                    {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='col-lg-12' style='padding-top: 20px'>
          {{this.message}}
        </div>
        <div class='col-lg-12' style='padding-top: 30px;'>
          <a href='#' class='pull-right' style='padding-left: 5px'>Delete</a>
          <a href='#' class='pull-right' style='padding-left: 5px'>Edit</a>
          <a href='#' class='pull-right' style='padding-left: 5px'>Pause</a>
        </div>

        <div class='col-lg-12'>
          <hr>
        </div>
      {{/each}}
    </div>


    <div class='col-lg-3' style='background-color: #F6F9FC; border-radius: 5%; padding-top: 5px; padding-bottom: 20px'>
      <h3 class='text-center'>Your socials</h3>
      {{#each socials}}
        <hr>
        <div>
          <img src={{this.profilePicture}} class='social-profile-picture'>
          <a class='btn btn-social-icon btn-{{this.provider}} social-icon-overlap'>
            <span class='fa fa-{{this.provider}}'></span>
          </a>
          <a href='/social/disconnect/{{this.provider}}/{{this.socialId}}' class='pull-right' style='padding-top: 15px'>Disconnect</a>
        </div>
      {{/each}}
      <hr>
      <div class='text-center'>
        <a href='/auth/twitter' class='btn btn-block btn-social btn-twitter' style='font-size: 12px'>
          <span class='fa fa-twitter'></span> Connect Twitter
        </a>
        <a href='/auth/facebook' class='btn btn-block btn-social btn-facebook' style='font-size: 12px'>
          <span class='fa fa-facebook'></span> Connect Facebook
        </a>
        <a href='/auth/instagram' class='btn btn-block btn-social btn-instagram' style='font-size: 12px'>
          <span class='fa fa-instagram'></span> Connect Instagram
        </a>
      </div>
    </div>


  </div>
</div>
