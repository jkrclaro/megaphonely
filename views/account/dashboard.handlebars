<div class='col-lg-12'>
  <div class='row'>
    <div class='col-lg-2' style='background-color: #F6F9FC'>
      {{#each twitterAccounts}}
        <div>
          <span class='fa fa-twitter'><span> @{{this.username}} <a href='/twitter/disconnect/{{this.username}}'>Disconnect</a>
        </div>
        <br>
      {{/each}}
      <a href='/auth/twitter'>+ Connect more social</a>
    </div>
    <div class='col-lg-10'>
      <form method='post' action='/content' enctype='multipart/form-data'>
        <div class='form-group'>
          <textarea class='form-control' name='message' cols='45' rows='5'></textarea>
        </div>
        <div class='form-group'>
          <input class='form-control' type='datetime-local' name='publishAt'>
        </div>
        {{#each twitterAccounts}}
          <label class='checkbox-inline'>
            <input type='checkbox' name='twitterUsernames' value={{this.username}}>{{this.username}}
          </label>
        {{/each}}
        <input type='file' name='photo'>
        <button type='submit' class='btn btn-primary'>Schedule</button>
      </form>
    </div>
  </div>
</div>
