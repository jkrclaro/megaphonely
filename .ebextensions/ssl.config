option_settings:
  aws:elb:listener:443:
    SSLCertificateId: arn:aws:acm:eu-west-1:608297321264:certificate/8e25ce9a-92f7-43f4-b3a8-d1d980e967fd
    ListenerProtocol: HTTPS
    InstancePort: 80

files:
  "/etc/httpd/conf.d/ssl_rewrite.conf":
      mode: "000644"
      owner: root
      group: root
      content: |
          RewriteEngine On
          <If "-n '%{HTTP:X-Forwarded-Proto}' && %{HTTP:X-Forwarded-Proto} != 'https'">
          RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R,L]
          </If>
